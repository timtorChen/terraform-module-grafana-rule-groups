{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grafana alerting rule groups",
  "description": "Grafana alerting rule groups for terraform",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "rules": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "annotations": {
              "type": "object",
              "properties": {
                "summary": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              }
            },
            "condition": {
              "type": "string"
            },
            "datas": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "datasource_uid": {
                    "type": [
                      "integer",
                      "string"
                    ]
                  },
                  "ref_id": {
                    "type": "string"
                  },
                  "model": {
                    "type": "object",
                    "properties": {
                      "refId": {
                        "type": "string"
                      },
                      "expr": {
                        "type": "string"
                      },
                      "instant": {
                        "type": "boolean",
                        "enum": [
                          true,
                          false
                        ]
                      },
                      "expression": {
                        "type": "string"
                      },
                      "sqlExpression": {
                        "type": "string"
                      },
                      "metricQueryType": {
                        "type": "integer",
                        "enum": [
                          1,
                          0
                        ]
                      },
                      "metricEditorMode": {
                        "type": "integer",
                        "enum": [
                          1,
                          0
                        ]
                      },
                      "type": {
                        "type": "string"
                      },
                      "reducer": {
                        "type": "string"
                      }
                    }
                  }
                },
                "required": [
                  "ref_id",
                  "model"
                ]
              }
            },
            "no_data_state": {
              "type": "string"
            },
            "exec_err_state": {
              "type": "string"
            },
            "for": {
              "type": "string"
            },
            "labels": {
              "type": "object",
              "properties": {
                "severity": {
                  "type": "string"
                }
              }
            },
            "notification_settings": {
              "type": "object",
              "properties": {
                "contact_point": {
                  "type": "string"
                },
                "group_by": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "group_interval": {
                  "type": "string"
                },
                "group_wait": {
                  "type": "string"
                },
                "mute_timings": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "repeat_interval": {
                  "type": "string"
                }
              },
              "required": [
                "contact_point"
              ]
            },
            "pause": {
              "type": "boolean",
              "enum": [
                true,
                false
              ]
            }
          },
          "required": [
            "name",
            "condition",
            "datas"
          ],
          "additionalProperties": false
        }
      },
      "interval_seconds": {
        "type": "integer"
      }
    },
    "required": [
      "name",
      "rules",
      "interval_seconds"
    ],
    "additionalProperties": false
  }
}